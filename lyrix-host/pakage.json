{
  "name": "lyrix-host",
  "version": "0.1.0",
  "private": true,
  "main": "main.js",
  "type": "commonjs",
  "scripts": {
    "start": "electron .",
    "sync:bridge": "powershell -NoProfile -ExecutionPolicy Bypass -Command \"Remove-Item -Recurse -Force ./bundle -ErrorAction SilentlyContinue; New-Item -ItemType Directory bundle | Out-Null; Copy-Item -Recurse -Force ../lyrix-bridge-web/server.js ./bundle/server.js; Copy-Item -Recurse -Force ../lyrix-bridge-web/web ./bundle/web\"",
    "dist": "electron-builder -w nsis",
    "dist:portable": "electron-builder -w portable"
  },
  "dependencies": {
    "multicast-dns": "^7.2.5",
    "qrcode": "^1.5.3"
  },
  "devDependencies": {
    "electron": "^32.1.2",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.lyrix.host",
    "productName": "Lyrix Host",
    "files": [
      "main.js",
      "preload.js",
      "renderer/**/*",
      "bundle/**/*"
    ],
    "extraResources": [],
    "asar": true,
    "nsis": {
      "oneClick": true,
      "perMachine": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true
    }
  }
}
